@namespace BlazorWasmPlanner.Components

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Plan Details
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem sm="12" md="6">
                <!--Plan details go here-->
                <img style="width:100%;margin:10px;border-radius:5px" src="@_plan.CoverUrl" />
                <MudText Typo="Typo.h5">@_plan?.Title</MudText>
                <MudText Typo="Typo.body1">@_plan?.Description</MudText>
            </MudItem>
            <MudItem sm="12" md="6">
                <!--Items go here-->
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

